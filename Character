package GameLogicPackage;

public abstract class Character {

    //atributes for character's
    public String name;
    public int maxHp;
    public int hp;
    public int xp;

    //constructor
    public Character(String name, int maxHp, int xp){
        this.name = name;
        this.maxHp = maxHp;
        this.xp = xp;
        this.hp = maxHp;

    }

    //methods for character
    public abstract int attac();
    public abstract int deffend();

}
